@layout({ title: 'Wellbeing Assessment' })
  <div class="max-w-2xl mx-auto px-4 py-8">
    @form({ action: route('wellbeing.store') })
      @!form.radio({
        name: 'mood',
        label: 'How are you feeling today?',
        options: moodOptions,
        value: flashMessages.get('mood')
      })

      <div class="mt-6 flex justify-end">
        @button({ type: 'submit' })
          Continue
        @end
      </div>
    @end
  </div>
@end